@model List<HalvaWebApplication.Models.GameItem.GameItemModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_gameItemModelLinkList", Model)

@using (Html.BeginForm())
{
    if (Model.Count > 0)
    {
        @Html.TextBox("NameFilter")

        List<SelectListItem> categoryList = new List<SelectListItem>();
        categoryList.Add(new SelectListItem() { Text = "Any", Value = "-1" });
        categoryList = categoryList.Concat(Model[0].CategoryList).ToList<SelectListItem>();

        @Html.DropDownList("CategoryFilter", categoryList, new { @class = "form-control" })
        <input type="submit" value="Filter" />
    }
}

@section navigation
{
    @Html.Partial("_NavigationLinks")
}
